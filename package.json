{
  "name": "simple-react-storefront",
  "version": "0.9.0",
  "private": "true",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "autoprefixer": "^9.8.0",
    "history": "^4.7.2",
    "npm-run-all": "^4.1.5",
    "numeral": "^2.0.6",
    "postcss-cli": "^7.1.1",
    "raf": "^3.3.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "tailwindcss": "^1.4.6"
  },
  "devDependencies": {
    "enzyme": "3.0.0",
    "enzyme-adapter-react-16": "1.0.0",
    "enzyme-to-json": "3.0.1",
    "react-test-renderer": "^16.13.1"
  },
  "scripts": {
    "build:tailwind": "postcss src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "watch:tailwind": "postcss -w src/styles/tailwind.css -o src/styles/tailwind.generated.css",
    "start": "run-p watch:tailwind start:react",
    "start:react": "react-scripts start",
    "prebuild": "NODE_ENV=production npm run build:tailwind",
    "build": "react-scripts build",
    "build:gitpages": "npm run build && rm -rf docs && mv build docs",
    "test": "react-scripts test",
    "test2": "jest --config=jest.config.json",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
